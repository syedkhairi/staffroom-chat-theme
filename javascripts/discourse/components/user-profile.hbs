{{#if this.isTopRoute}}
  {{#if this.currentUser}}
  <div class="overflow-hidden rounded-lg bg-gray-100">
      <div>
        {{log this.currentUser}}
        <img class="h-28 w-full object-cover" src="https://images.unsplash.com/photo-1444628838545-ac4016a5418a?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80" alt="" />
      </div>
      <div class="w-full p-5">
        <div class="-mt-12 sm:-mt-16 sm:flex sm:items-end sm:space-x-5">
          <div class="mx-auto flex">
            <img class="size-28 rounded-full ring-4 ring-white sm:size-24" src={{this.avatarUrl}} alt="" />
          </div>
        </div>
        <div class="text-center mt-5">
          <h3 class="text-lg font-medium">{{this.currentUser.name}}</h3>
          <span class="text-sm text-gray-500">@{{this.currentUser.username}}</span>
        </div>
        <a
          href="/u/{{this.currentUser.username}}/summary" 
          class="mt-5 block w-full text-center rounded-md bg-gray-200 px-3.5 py-2.5 text-sm font-semibold text-gray-900 hover:bg-gray-300"
          >
          View profile
        </a>
      </div>
  </div>
  {{/if}}
{{/if}}