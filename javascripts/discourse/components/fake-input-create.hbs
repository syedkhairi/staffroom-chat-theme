        <div {{did-insert this.fetchBgUrl}} class="relative inline-block size-9 rounded-full">
          {{avatar this.currentUser imageSize="large"}}
          {{#if this.flairUrl}}
            <img src={{this.flairUrl}} class="absolute bottom-1 right-0 block size-3" />
